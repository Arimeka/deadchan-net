.login-panel.panel.panel-default
  .panel-heading
    %h3.panel-title Вход
  .panel-body
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %fieldset
        .form-group
          = f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'form-control'
        .form-group
          = f.password_field :password, placeholder: 'Пароль', class: 'form-control'
        - if devise_mapping.rememberable?
          .checkbox
            = f.label :remember_me do
              = f.check_box :remember_me
              Запомнить меня
        = f.submit 'Войти', class: 'btn btn-lg btn-success btn-block'

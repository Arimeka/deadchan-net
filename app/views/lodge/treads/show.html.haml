- provide(:title, t("path.controllers.lodge/#{controller.controller_name}.show"))
.col-md-12
  = render partial: "subnav"
  %h1= "#{tread.title} - #{t("path.controllers.lodge/#{controller.controller_name}.show")}"
  .table-responsive
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th
          %th= t "mongoid.attributes.post.id"
          %th= t "mongoid.attributes.post.content"
          %th
      %tbody
        = render posts
  .clearfix
  = will_paginate posts

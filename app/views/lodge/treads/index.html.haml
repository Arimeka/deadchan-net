- provide(:title, t("path.controllers.lodge/#{controller.controller_name}.title"))
.row
  .col-lg-12
    %h1.page-header Список тредов
  / /.col-lg-12
/ /.row
.row
  .col-lg-12
    .panel.panel-default
      .panel-body
        .dataTable_wrapper
          %table#dataTables-example.table.table-striped.table-bordered.table-hover
            %thead
              %tr
                %th.col-sm-1
                %th.col-sm-2= t "mongoid.attributes.tread.board_id"
                %th= t "mongoid.attributes.tread.title"
                %th.col-sm-1= t "mongoid.attributes.tread.posts_count"
                %th.col-sm-1= t "mongoid.attributes.tread.posts_count_unchecked"
                %th.col-sm-2= t "mongoid.attributes.tread.request_ip"
                %th.col-sm-2
            %tbody= render treads
    .clearfix
    = will_paginate treads

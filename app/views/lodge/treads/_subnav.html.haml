.navbar.navbar-default
  %ul.nav.navbar-nav
    %li{class: controller.controller_path == "lodge/treads" && controller.action_name == "index" ? "active" : ""}
      = link_to lodge_treads_path do
        %i.icon-list-alt
        =t "path.controllers.lodge/treads.index"
    %li{class: controller.controller_path == "lodge/treads" && controller.action_name == "new" ? "active" : ""}
      %a{href: new_lodge_tread_path}
        %i.icon-pencil
        =t "path.controllers.lodge/treads.new"
    - if controller.action_name == "show" || (controller.controller_path == "lodge/posts" && controller.action_name == "new")
      %li{class: controller.controller_path == "lodge/posts" && controller.action_name == "new" ? "active" : ""}
        %a{href: new_lodge_tread_post_path(tread)}
          %i.icon-pencil
          =t "path.controllers.lodge/treads.new_post"

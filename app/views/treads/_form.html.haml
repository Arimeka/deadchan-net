= form_for post, url: tread_path(entry.board.abbr, entry.id), authenticity_token: true, html: {role: 'form', class: 'form-horizontal', remote: true, 'data-type' => :json }  do |f|
  .form-group
    = f.label :content, class: "control-label"
    = f.text_area :content, rows: 10, class: "form-control"
    .controls
      - unless user_signed_in? || admin_signed_in?
        .captcha
          = recaptcha_tags ajax: true
      %a{class: "upload-file btn btn-sm btn-primary"}
        %b
          Загрузить изображение
      %input{id: "fileupload", type: "file", name: "file_attaches"}
      %span{class: "uploading-filename"}

  = f.submit t('form.submit'), class: 'btn btn-primary'

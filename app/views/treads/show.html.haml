- provide(:title, "#{board.title} - #{tread.title}")
.col-md-6.form-answer
  %button.btn.well#answer Ответить
  %button{class: 'btn well', id: 'hide', style: 'display: none;'}
    Скрыть форму
.clearfix
.col-md-12
  .thread
    %article.well
      %ul.header.list-inline
        %li
          = link_to tread_path(board.abbr, tread.id) do
            %h3= tread.title
        %li= Russian::strftime tread.published_at, '%a %d %B %Y %H:%M:%S'
        %li
          = link_to tread.id.to_s.last(7), tread_path(board.abbr, tread.id)
      .body.row
        .col-md-2
          = link_to '#' do
            = image_tag '/sample/post-image.gif', class: 'img-responsive img-thumbnail'
        .col-md-10= tread.content.html_safe
      .footer
    .posts#posts
      = render posts
.col-md-6.form-answer.page-footer
  %button.btn.well#answer Ответить
  %button{class: 'btn well', id: 'hide', style: 'display: none;'}
    Скрыть форму

%div{class: 'well', id: 'form', style: 'display: none;'}
  = render partial: 'form'
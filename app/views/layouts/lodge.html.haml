!!! 5
%html{lang: 'ru'}
  %head
    %title= full_title(yield(:title))
    %meta{charset: "utf-8"}
  = stylesheet_link_tag 'backend', media: 'all', "data-turbolinks-track" => true
  = stylesheet_link_tag 'normalize', "data-turbolinks-track" => true
  = javascript_include_tag "backend/backend", "data-turbolinks-track" => true
  = render 'layouts/csrf'
%body
  %header
    = render 'layouts/lodge/header'
  .row
    .col-md-2.sidebar= render 'layouts/lodge/sidebar'
    .col-md-10
      = render 'layouts/lodge/messages'
      .well.col-md-12= yield
  %footer
    = render 'layouts/lodge/footer'
